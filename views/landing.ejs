  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .fade-in-up {
      animation: fadeInUp 0.7s ease-out both;
    }

    .gradient-text {
      background: linear-gradient(to right, #ec4899, #8b5cf6);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .btn-glow {
      background: linear-gradient(to right, #ec4899, #8b5cf6);
      color: white;
      transition: all 0.3s ease;
      box-shadow: 0 0 0 transparent;
    }

    .btn-glow:hover {
      box-shadow: 0 0 12px rgba(236, 72, 153, 0.7);
      transform: scale(1.05);
    }

    .hero-bg {
      background: linear-gradient(to right, #1f2937, #111827);
    }
  </style>
</head>
<body class="bg-zinc-900 text-white font-sans leading-relaxed">

  <!-- Navbar -->
<!-- Navbar -->
<nav class="w-full py-6 px-10 flex justify-between items-center shadow-md border-b border-zinc-700 hero-bg z-50">
  <a href="/" class="text-3xl font-bold gradient-text tracking-tight">Vistora</a>

  <!-- Conditional Links -->
  <div class="space-x-6 hidden md:flex text-sm font-medium">
    <% if (user) { %>
      <a href="/profile" class="hover:text-pink-400 transition">Profile</a>
      <a href="/feed" class="hover:text-pink-400 transition">Feed</a>
      <a href="/logout" class="hover:text-pink-400 transition">Logout</a>
    <% } else { %>
      <a href="/login" class="hover:text-pink-400 transition">Login</a>
      <a href="/register" class="hover:text-pink-400 transition">Sign Up</a>
    <% } %>
  </div>
</nav>


  <!-- Hero Section -->
  <section class="hero-bg pt-24 pb-32 text-center">
    <div class="max-w-3xl mx-auto px-6 fade-in-up">
