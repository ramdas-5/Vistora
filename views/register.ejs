<% include ./partials/header.ejs %>

<div class="min-h-screen bg-gradient-to-br from-pink-100 via-blue-100 to-purple-200 flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white/90 backdrop-blur-lg px-8 py-10 rounded-3xl shadow-2xl animate-fade-in drop-shadow-lg">
    <!-- Title -->
    <h1 class="text-4xl font-extrabold text-center text-gray-800 mb-6 animate-slide-down tracking-tight">
      Create Your Account âœ¨
    </h1>

    <!-- Form -->
    <form action="/register" method="POST" class="space-y-5 animate-fade-in-slow">

      <!-- Full Name -->
      <div class="relative group">
        <input 
          type="text" 
          name="name" 
          placeholder="Full Name"
          required
          class="w-full px-4 py-3 bg-transparent text-gray-800 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 transition-all duration-300 placeholder-gray-500"
        />
      </div>

      <!-- Email -->
      <div class="relative group">
        <input 
          type="email" 
          name="email" 
          placeholder="Email Address"
          required
          class="w-full px-4 py-3 bg-transparent text-gray-800 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300 placeholder-gray-500"
        />
      </div>

      <!-- Username -->
      <div class="relative group">
        <input 
          type="text" 
          name="username" 
          placeholder="Username"
          required
          class="w-full px-4 py-3 bg-transparent text-gray-800 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all duration-300 placeholder-gray-500"
        />
      </div>

      <!-- Password -->
      <div class="relative group">
        <input 
          type="password" 
          name="password" 
          placeholder="Password"
          required
          class="w-full px-4 py-3 bg-transparent text-gray-800 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-500 transition-all duration-300 placeholder-gray-500"
        />
      </div>

      <!-- Contact Number -->
      <div class="relative group">
        <input 
          type="tel" 
          name="contact" 
          placeholder="Contact Number"
          pattern="[0-9]{10}"
          title="Enter a valid 10-digit number"
          required
          class="w-full px-4 py-3 bg-transparent text-gray-800 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-green-500 transition-all duration-300 placeholder-gray-500"
        />
      </div>

      <!-- Submit Button -->
      <button 
        type="submit"
        class="w-full py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-bold rounded-xl shadow-md hover:scale-105 hover:shadow-lg transition-all duration-300 ease-in-out"
      >
        Register
      </button>
    </form>

    <!-- Login Redirect -->
    <p class="text-sm text-center text-gray-700 mt-6 animate-fade-in-slow">
      Already have an account? 
      <a href="/login" class="text-blue-600 font-medium hover:underline hover:text-blue-800 transition">Login</a>
    </p>
  </div>
</div>

<% include ./partials/footer.ejs %>

<!-- ðŸ”¥ Custom Animations -->
<style>
  @keyframes fade-in {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }

  @keyframes fade-in-slow {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes slide-down {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out both;
  }

  .animate-fade-in-slow {
    animation: fade-in-slow 0.9s ease-out both;
  }

  .animate-slide-down {
    animation: slide-down 0.7s ease-out both;
  }

  input:-webkit-autofill {
    box-shadow: 0 0 0 1000px #ffffff inset;
    -webkit-text-fill-color: #1f2937;
    transition: background-color 5000s ease-in-out 0s;
  }
</style>
