<% include ./partials/header.ejs %>

<div class="min-h-screen bg-gradient-to-br from-zinc-900 to-zinc-800 text-white px-6 py-16 font-sans">
  <div class="max-w-2xl mx-auto backdrop-blur-sm bg-white/5 border border-zinc-700 shadow-2xl rounded-2xl p-10 animate-slideUp">

    <!-- Avatar & Heading -->
    <div class="flex items-center justify-center flex-col mb-10">
      <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-pink-500 shadow-lg">
        <img src="<%= user.profileImage %>" class="w-full h-full object-cover" />
      </div>
      <h1 class="text-3xl font-extrabold mt-4 text-pink-400">Edit Profile</h1>
      <p class="text-zinc-400 text-sm mt-1">Update your info to keep it fresh</p>
    </div>

    <!-- Edit Form -->
    <form action="/edit" method="POST" class="space-y-8">

      <!-- Name -->
      <div class="relative">
        <input type="text" name="name" value="<%= user.name %>" required
          placeholder="Full Name"
          class="peer w-full bg-zinc-800 border border-zinc-700 rounded-lg px-4 pt-5 pb-2 text-sm text-white placeholder-transparent focus:outline-none focus:ring-2 focus:ring-pink-500 transition" />
        <label
          class="absolute left-4 top-2 text-xs text-zinc-400 peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-sm peer-placeholder-shown:text-zinc-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-pink-400 transition-all">
          Full Name
        </label>
      </div>

      <!-- Username -->
      <div class="relative">
        <input type="text" name="username" value="<%= user.username %>" required
          placeholder="Username"
          class="peer w-full bg-zinc-800 border border-zinc-700 rounded-lg px-4 pt-5 pb-2 text-sm text-white placeholder-transparent focus:outline-none focus:ring-2 focus:ring-pink-500 transition" />
        <label
          class="absolute left-4 top-2 text-xs text-zinc-400 peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-sm peer-placeholder-shown:text-zinc-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-pink-400 transition-all">
          Username
        </label>
      </div>

      <!-- Contact -->
      <div class="relative">
        <input type="text" name="contact" value="<%= user.contact %>" required
          placeholder="Contact Number"
          class="peer w-full bg-zinc-800 border border-zinc-700 rounded-lg px-4 pt-5 pb-2 text-sm text-white placeholder-transparent focus:outline-none focus:ring-2 focus:ring-pink-500 transition" />
        <label
          class="absolute left-4 top-2 text-xs text-zinc-400 peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-sm peer-placeholder-shown:text-zinc-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-pink-400 transition-all">
          Contact Number
        </label>
      </div>

      <!-- Button -->
      <button type="submit"
        class="w-full bg-gradient-to-r from-pink-500 to-pink-600 hover:from-pink-600 hover:to-pink-700 py-3 rounded-lg font-semibold shadow-md hover:shadow-pink-400/40 transition-all duration-300">
        <i class="ri-save-line mr-2"></i> Save Changes
      </button>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>

<style>
  @keyframes slideUp {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-slideUp {
    animation: slideUp 0.7s ease-out both;
  }
</style>
